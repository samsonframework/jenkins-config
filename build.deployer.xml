<project name="deployer">
    <property name="builddir" value="${basedir}/build/"/>
    <property name="deployer" value="${basedir}/vendor/bin/behat"/>

    <target name="execute"
            unless="execute.done"
            description="Deploying project"
            >
        <exec executable="${deployer}">
            <arg value="deploy"/>
            <arg value="test"/>
        </exec>
        <property name="execute.done" value="true"/>
    </target>
</project>