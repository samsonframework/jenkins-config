<project name="behat">
    <property name="builddir" value="${basedir}/build/"/>
    <property name="behat" value="${basedir}/vendor/bin/behat"/>
    <property name="behat.configuration" value="behat.chrome.yml"/>
    <property name="behat.profile" value="jenkins"/>

    <target name="behat.execute" description="Running Behat tests" if="behat.configuration">
        <exec executable="${behat}" failonerror="true">
            <arg value="-c"/>
            <arg value="${behat.configuration}"/>
            <arg value="-p"/>
            <arg value="${behat.profile}"/>
        </exec>
        <move todir="${failsdir}">
            <fileset dir="${basedir}" includes="Fail*.jpg"/>
        </move>
    </target>
</project>
