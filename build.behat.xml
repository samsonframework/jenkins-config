<project name="behat">
    <property name="builddir" value="${basedir}/build/"/>
    <property name="behat" value="${basedir}/vendor/bin/behat"/>
    <property name="configuration" value="behat.chrome.yml"/>
    <property name="profile" value="jenkins"/>

    <target name="execute"
            unless="execute.done"
            description="Running Behat tests">
        <exec executable="${behat}" failonerror="true">
            <arg value="-c"/>
            <arg value="${configuration}"/>
            <arg value="-p"/>
            <arg value="${profile}"/>
        </exec>
        <move todir="${failsdir}">
            <fileset dir="${basedir}" includes="Fail*.jpg"/>
        </move>
        <property name="execute.done" value="true"/>
    </target>
</project>