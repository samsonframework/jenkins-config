<project name="phppmd">
    <property name="codebase" value="/src/"/>
    <property name="builddir" value="/build/"/>
    <property name="buildoutputdir" value="${builddir}/logs"/>
    <property name="phpmd" value="${basedir}/vendor/bin/phpmd"/>

    <target name="execute" description="Perform project mess detection using PHPMD and log result in XML format. Intended for usage within a continuous integration environment.">
        <exec executable="${phpmd}">
            <arg path="${codebase}"/>
            <arg value="xml"/>
            <arg path="${builddir}/phpmd.xml"/>
            <arg value="--reportfile"/>
            <arg path="${buildoutputdir}/pmd.xml"/>
        </exec>
    </target>
</project>