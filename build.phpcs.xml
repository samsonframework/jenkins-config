<project name="phpcs">
    <property name="codebase" value="${basedir}/src/"/>
    <property name="builddir" value="${basedir}/build/"/>
    <property name="buildoutputdir" value="${builddir}/logs"/>
    <property name="phpcs" value="${basedir}/vendor/bin/phpcs"/>

    <target name="execute" description="Find coding standard violations using PHP_CodeSniffer and log result in XML format. Intended for usage within a continuous integration environment.">
        <exec executable="${phpcs}" output="/dev/null">
            <arg value="--report=checkstyle"/>
            <arg value="--report-file=${buildoutputdir}/checkstyle.xml"/>
            <arg value="--standard=PSR2"/>
            <arg value="--extensions=php"/>
            <arg value="--ignore=autoload.php"/>
            <arg path="${codebase}"/>
        </exec>
    </target>
</project>